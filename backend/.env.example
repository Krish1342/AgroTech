# Agrotech Backend Environment Variables
# Copy this file to .env and replace the placeholder values with your actual configuration

# Weather API Configuration
OPENWEATHER_API_KEY=your_openweather_api_key_here


# Application Configuration
APP_NAME=Agrotech API
APP_VERSION=1.0.0
DEBUG=True
LOG_LEVEL=info

# Server Configuration
HOST=0.0.0.0
PORT=8000

# Security Configuration
SECRET_KEY=your_secret_key_here_for_jwt_tokens
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database Configuration (for future use)
DATABASE_URL=sqlite:///./agrotech.db
# For PostgreSQL: postgresql://user:password@localhost/agrotech
# For MySQL: mysql://user:password@localhost/agrotech

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif

# ML Model Configuration
MODEL_PATH=./models/
ENABLE_GPU=False

# Email Configuration (for password reset, etc.)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
EMAIL_FROM=noreply@agrotech.com

# External API Rate Limits
WEATHER_API_RATE_LIMIT=60  # requests per minute

# ============================================
# THINGSPEAK IOT INTEGRATION
# ============================================
# Get your credentials from https://thingspeak.com/
# Create a channel with 6 fields: N, P, K, Moisture, pH, Temperature

# Your ThingSpeak Channel ID
THINGSPEAK_CHANNEL_ID=your_channel_id_here

# Read API Key (to fetch data from ThingSpeak)
THINGSPEAK_READ_API_KEY=your_read_api_key_here

# Write API Key (optional - for writing recommendations back)
THINGSPEAK_WRITE_API_KEY=your_write_api_key_here

# Field mapping (which fields contain which data)
# Default: field1=N, field2=P, field3=K, field4=Moisture, field5=pH, field6=Temperature
THINGSPEAK_MODEL_FIELDS=1,2,3,4,5

# Weather fields (optional - if you store weather data)
THINGSPEAK_WEATHER_FIELDS=7,8,9,10

# Recommendation channel (optional - separate channel for writing recommendations)
THINGSPEAK_RECOMMENDATION_CHANNEL_ID=
THINGSPEAK_RECOMMENDATION_WRITE_API_KEY=